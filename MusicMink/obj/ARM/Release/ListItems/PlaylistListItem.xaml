<UserControl
    x:Class="MusicMink.ListItems.PlaylistListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicMink.ListItems"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid x:ConnectionId='1'
        x:Name="RootGrid"
        Margin="10"
                                
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="NameTest"
            Grid.Row="0"
            Text="{Binding Name}"
            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
            Foreground="{ThemeResource PhoneForegroundBrush}"
            />

        <TextBlock
            Grid.Row="1"
            FontSize="{StaticResource TextStyleSmallFontSize}"
            Foreground="{ThemeResource PhoneMidBrush}"
            Text="{Binding LengthInfo}"
            />
    </Grid>
</UserControl>

