<Page
    x:Class="MusicMink.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicMink.Pages"
    xmlns:converters="using:MusicMink.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.Resources>
        <converters:NumericTransformConverter x:Key="AppWidthToTileSizeConverter" Margin="20" Sections="2" />
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="0">
            <GridView x:Name="RootNavigationGrid"
                SelectionMode="None"      
                >
                <GridViewItem x:ConnectionId='1'  x:Name="SongsNavigationItem"                                    >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="Red"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            x:Uid="SongsTile"
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text=""
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
                <GridViewItem x:ConnectionId='2'  x:Name="AlbumNavigationItem"                                    >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="Orange"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="Albums"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
                <GridViewItem x:ConnectionId='3'  x:Name="ArtistsNavigationItem"                                      >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="DarkGoldenrod"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="Artists"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
                <GridViewItem x:ConnectionId='4' x:Name="PlaylistNavigationItem"                                       >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="Green"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="Playlists"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
                <GridViewItem x:Name="MixListNavigationItem">
                    <Grid Margin="10">
                        <Rectangle
                            Fill="Blue"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="Mixes"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />                        
                    </Grid>
                </GridViewItem>
                <GridViewItem x:ConnectionId='5' x:Name="LibraryNavigationItem"                                      >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="Purple"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="Manage Library"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
                <GridViewItem x:ConnectionId='6' x:Name="SettingsNavigationItem"                                       >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="Brown"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="Settings"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
                <GridViewItem x:ConnectionId='7' x:Name="HistoryNavigationItem"                                      >
                    <Grid Margin="10">
                        <Rectangle
                            Fill="PowderBlue"
                            Height="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            Width="{Binding ActualWidth, ElementName=RootNavigationGrid, Converter={StaticResource AppWidthToTileSizeConverter}}"
                            />
                        <TextBlock
                            Foreground="White"
                            FontSize="{StaticResource TextStyleExtraLargeFontSize}"
                            Text="History"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                </GridViewItem>
            </GridView>
        </Grid>
    </Grid>
</Page>

